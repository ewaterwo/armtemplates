{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "elb_name": {
      "type": "string"
    },
    "elb_pip_name": {
      "type": "string"
    },
    "elb_pip_dns": {
      "type": "string"
    },
    "elb_pip_type": {
      "type": "string"
    },
    "elb_backend_pool_name": {
      "type": "string"
    },
    "elb_frontEndIPConfigID": {
      "type": "string"
    },
    "elb_poolID" : {
      "type" : "string"
    },
    "elb_probeID" : {
      "type" : "string"
    }
  },
  "resources": [
       {
          "apiVersion": "2015-06-15",
          "type": "Microsoft.Network/publicIPAddresses",
          "name": "[parameters('elb_pip_name')]",
          "location": "[parameters('location')]",
          "properties": {
            "publicIPAllocationMethod": "[parameters('elb_pip_type')]",
            "dnsSettings": {
              "domainNameLabel": "[parameters('elb_pip_dns')]"
            }
          }
       },
   
       {
            "type": "Microsoft.Network/loadBalancers",
            "name": "[parameters('elb_name')]",
            "apiVersion": "2016-03-30",
            "location": "[parameters('location')]",
            "properties": {
                "frontendIPConfigurations": [
                {
                    "name": "LoadBalancerFrontEnd",
                    "properties": {
                        "privateIPAllocationMethod": "Dynamic",
                        "publicIPAddress": {
                            "id": "[resourceId('Microsoft.Network/publicIPAddresses/', parameters('elb_pip_name'))]"
                        }
                    }
                }
                ],
                "backendAddressPools": [
                {
                    "name": "[parameters('elb_backend_pool_name')]"
                }
                ],
                "probes": [
                    {
                        "name": "tcpProbe",
                        "properties": {
                            "protocol": "Tcp",
                            "port": 22,
                            "intervalInSeconds": 5,
                            "numberOfProbes": 2
                        }
                    }
                ],
                "loadBalancingRules": [
                    {
                        "name": "ssh",
                        "properties": {
                            "frontendIPConfiguration": {
                                "id": "[parameters('elb_frontEndIPConfigID')]"
                            },
                            "frontendPort": 22,
                            "backendPort": 22,
                            "enableFloatingIP": false,
                            "idleTimeoutInMinutes": 4,
                            "protocol": "Tcp",
                            "loadDistribution": "Default",
                            "backendAddressPool": {
                                "id": "[parameters('elb_poolID')]"
                            },
                            "probe": {
                                "id": "[parameters('elb_ProbeID')]"
                            }
                        }
                    },
                    {
                        "name": "http",
                        "properties": {
                            "frontendIPConfiguration": {
                                "id": "[parameters('elb_frontEndIPConfigID')]"
                            },
                            "frontendPort": 80,
                            "backendPort": 80,
                            "enableFloatingIP": false,
                            "idleTimeoutInMinutes": 4,
                            "protocol": "Tcp",
                            "loadDistribution": "Default",
                            "backendAddressPool": {
                                "id": "[parameters('elb_poolID')]"
                            },
                            "probe": {
                                "id": "[parameters('elb_ProbeID')]"
                            }
                        }
                    },
                    {
                        "name": "iperf",
                        "properties": {
                            "frontendIPConfiguration": {
                                "id": "[parameters('elb_frontEndIPConfigID')]"
                            },
                            "frontendPort": 5001,
                            "backendPort": 5001,
                            "enableFloatingIP": false,
                            "idleTimeoutInMinutes": 4,
                            "protocol": "Tcp",
                            "loadDistribution": "Default",
                            "backendAddressPool": {
                                "id": "[parameters('elb_poolID')]"
                            },
                            "probe": {
                                "id": "[parameters('elb_ProbeID')]"
                            }
                        }
                    }
                ],
                "inboundNatRules": [],
                "outboundNatRules": [],
                "inboundNatPools": []
            },
            "resources": [],
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses/', parameters('elb_pip_name'))]"
            ]
        }
  ],
  "outputs": {
  }
}
